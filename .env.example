# Audio processing settings
# Sample rate for audio processing (Hz)
SAMPLE_RATE=16000

# Voice Activity Detection settings
# Threshold for detecting speech (0.0 to 1.0)
VAD_THRESHOLD=0.5
# Minimum duration of speech to detect (seconds)
# For D&D recordings, this helps avoid detecting small sounds/noises
VAD_MIN_SPEECH_DURATION=0.5
# Minimum duration of silence to detect (seconds)
# For D&D recordings, this should be longer to handle natural pauses in conversation
VAD_MIN_SILENCE_DURATION=2.0
# Padding to add around speech segments (seconds)
# This helps capture the full start/end of utterances
PADDING_SECONDS=0.2

# Whisper.cpp configuration
# Path to whisper.cpp build directory containing the CLI tool
WHISPER_CPP_PATH=/path/to/whisper.cpp/build/bin
# Path to the whisper.cpp model file
WHISPER_MODEL_PATH=/path/to/whisper.cpp/models/ggml-large-v3.bin
# Context prompt to guide transcription
WHISPER_PROMPT="This is a Discord recording of a Dungeons & Dragons 5e session with multiple players and periods of silence. Ignore background noise and silence."
# Beam size for beam search (higher = more accurate but slower)
WHISPER_BEAM_SIZE=8
# Entropy threshold for word timestamps
WHISPER_ENTROPY_THOLD=2.4
# Maximum context length for transcription
WHISPER_MAX_CONTEXT=128
# Temperature for sampling (0.0 = deterministic)
WHISPER_TEMPERATURE=0.0
# Word-level timestamp threshold
WHISPER_WORD_THOLD=0.6
# Language code for transcription
WHISPER_LANGUAGE=en
