# Audio processing settings
# Sample rate for audio processing (Hz)
SAMPLE_RATE=16000
# Voice Activity Detection threshold (0.0 to 1.0)
VAD_THRESHOLD=0.5
# Minimum duration of speech to detect (seconds)
VAD_MIN_SPEECH_DURATION=0.1
# Minimum duration of silence to detect (seconds)
VAD_MIN_SILENCE_DURATION=0.1
# Padding to add around speech segments (seconds)
PADDING_SECONDS=0.1

# Whisper configuration
# Model to use for transcription (e.g., large-v3, medium, small)
WHISPER_MODEL=large-v3
# Context prompt to guide transcription
WHISPER_PROMPT="This is a live-play Dungeons & Dragons 5e session."
# Number of beams for beam search (higher = more accurate but slower)
WHISPER_BEAM_SIZE=5
# Entropy threshold for word timestamps
WHISPER_ENTROPY_THOLD=2.8
# Maximum context length for transcription
WHISPER_MAX_CONTEXT=64
# Temperature for sampling (0.0 = deterministic, higher = more random)
WHISPER_TEMPERATURE=0.0
# Language code for transcription (e.g., en, es, fr)
WHISPER_LANGUAGE=en
