# Audio processing settings
# Sample rate for audio processing (Hz)
SAMPLE_RATE=16000

# Whisper.cpp configuration
# Context prompt to guide transcription
WHISPER_PROMPT="This is a recording of a Dungeons & Dragons 5e live play session with a single player. Focus on transcribing actual spoken words and ignore non-speech sounds like laughs, sighs, or background noise."
# Beam size for beam search (higher = more accurate but slower)
WHISPER_BEAM_SIZE=8
# Entropy threshold for word timestamps (higher = more strict word detection)
WHISPER_ENTROPY_THOLD=2.8
# Maximum context length for transcription
WHISPER_MAX_CONTEXT=128
# Temperature for sampling (0.0 = deterministic)
WHISPER_TEMPERATURE=0.0
# Word-level timestamp threshold (higher = more strict word detection)
WHISPER_WORD_THOLD=0.6
# Language code for transcription
WHISPER_LANGUAGE=en

# Whisper.cpp settings
# Model file to use (e.g., ggml-base.en.bin, ggml-medium.bin, ggml-large-v3.bin)
WHISPER_MODEL=ggml-large-v3.bin
# Number of threads to use for transcription
WHISPER_THREADS=4
# Language code for transcription (duplicate of WHISPER_LANGUAGE for compatibility)
WHISPER_LANG=en

# Voice Activity Detection (VAD) settings
# Threshold for detecting speech (0.0 to 1.0, higher = more strict speech detection)
VAD_THRESHOLD=0.5
# Minimum duration of speech to detect (seconds, lower = catches shorter utterances)
VAD_MIN_SPEECH_DURATION=0.3
# Minimum duration of silence to detect (seconds, higher = more strict silence detection)
VAD_MIN_SILENCE_DURATION=4.5
# Padding to add around speech segments (seconds)
PADDING_SECONDS=0.3

# Output settings
OUTPUT_DIR=output
